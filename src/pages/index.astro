---
import { Image } from 'astro:assets'

import PageLayout from '@/layouts/BaseLayout.astro'
import Section from '@/components/home/Section.astro'
import Card from '@/components/Card.astro'
import ProjectCard from '@/components/home/ProjectCard.astro'
import Label from '@/components/home/Label.astro'
import SkillLayout from '@/components/home/SkillLayout.astro'
import Hitokoto from '@/components/home/Hitokoto.astro'
import PostPreview from '@/components/blog/PostPreview.astro'
import Button from '@/components/Button.astro'
import Analytics from '@vercel/analytics/astro'
import { siteConfig } from '@/site-config'
import { getAllCollections, sortMDByDate } from '@/utils'

import avatar from '@/assets/avatar.jpg'

const languages = ['JavaScript', 'Html5', 'Python', 'Java']
const frontend = ['TypeScript', 'VueJs', 'Vite', 'Astro', 'uni-app']
const backend = ['NodeJs', 'MySql']
const service = ['Vercel']

const MAX_POSTS = 10
const allPosts = await getAllCollections()
const allPostsByDate = sortMDByDate(allPosts).slice(0, MAX_POSTS)
